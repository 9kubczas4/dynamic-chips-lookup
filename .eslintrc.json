{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "plugins": ["boundaries"],
  "settings": {
    "boundaries/elements": [
      {
        "type": "shared",
        "pattern": ["src/app/shared/*", "@shared/*"]
      },
      {
        "type": "core",
        "pattern": ["src/app/core/*", "@core/*"]
      },
      {
        "type": "home",
        "pattern": ["src/app/feature/home/*", "@features/home/*"]
      },
      {
        "type": "orders",
        "pattern": ["src/app/feature/orders/*", "@features/orders/*"]
      },
      {
        "type": "products",
        "pattern": ["src/app/feature/products/*", "@features/products/*"]
      },
      {
        "type": "shops",
        "pattern": ["src/app/feature/shops/*", "@features/shops/*"]
      },
      {
        "type": "users",
        "pattern": ["src/app/feature/users/*", "@features/users/*"]
      }
    ],
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "plugin:boundaries/recommended"
      ],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/explicit-function-return-type": [
          "warn",
          {
            "allowExpressions": true,
            "allowTypedFunctionExpressions": true
          }
        ],
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": "variable",
            "format": ["camelCase", "UPPER_CASE", "PascalCase"]
          }
        ],
        "boundaries/element-types": [
          "error",
          {
            "default": "disallow",
            "rules": [
              {
                "from": "shared",
                "allow": ["shared"]
              },
              {
                "from": "core",
                "allow": ["core", "shared"]
              },
              {
                "from": "home",
                "allow": ["home", "core", "shared"]
              },
              {
                "from": "orders",
                "allow": ["orders", "core", "shared"]
              },
              {
                "from": "products",
                "allow": ["products", "core", "shared"]
              },
              {
                "from": "shops",
                "allow": ["shops", "core", "shared"]
              },
              {
                "from": "users",
                "allow": ["users", "core", "shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
